<div class="main set">
  <div class="container">

    <div class="form-heading">タスクの追加</div>

    <div class="form task-form">

        <div class="form-body">
          <% if @error_message %>
            <div class="form-error">
              <%= @error_message %>
            </div>
          <% end %>

          <%= form_tag("/tasks/create") do %>
            <p>タスクの内容</p>
            <input name="content">
            <p>締切日</p>
            <input name="deadline" value="<%= Date.tomorrow %>">
            <input type="submit" value="追加する">
          <% end %>
        </div>
    </div>
    
  </div>
</div>